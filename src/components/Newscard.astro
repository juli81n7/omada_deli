---
import Knap from "./knap.astro";
const { header, text, img, date, price, type, id } = Astro.props;
---

<div class="card">
  <div class="img_container">
    <img src={img} alt={header} />
  </div>
  <div class="content">
    <div class="left">
      <div>
        <h2 class="newshead">{header}</h2>
        <p>
          {text}
        </p>
      </div>
    </div>
    <div class="right">
      <Knap text="Se mere" />
    </div>
  </div>
</div>

<style>
  .card {
    background-color: var(--primarycolor);
    height: 600px;
    aspect-ratio: 80 / 50;
    display: flex;
    flex-direction: column;
  }
  .card:first-of-type {
    margin-left: 1rem;
  }
  .card:last-of-type {
    margin-right: 5rem;
  }

  .img_container {
    width: 100%;
    max-height: 1000px;
    min-height: 150px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  img {
    object-fit: cover;
    align-self: stretch;
  }

  .content {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    margin: auto;
    padding-bottom: 1.5rem;
    padding-top: 1rem;
  }
  .newshead,
  p {
    color: var(--secondarycolor);
    margin-left: 1rem;
  }

  p {
    margin-right: 10rem;
  }
  .right {
    margin-top: auto;
  }

  @media (max-width: 768px) {
    .card {
      background-color: var(--primarycolor);
      min-width: 320px;
      max-width: 350px;
      height: auto;
      aspect-ratio: 15 / 10;
      margin-left: 1rem;
      display: flex;
      flex-direction: column;
      margin: 0;
    }
    .img_container {
      min-width: 100%;
      height: 300px;
      margin-bottom: 0rem;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .newshead {
      margin-top: 1rem;
    }
    img {
      object-fit: cover;
      align-self: stretch;
    }

    .content {
      display: block;
      justify-content: space-between;
      gap: 2rem;
      margin: auto;
      padding-bottom: 1.5rem;
      padding-right: 2rem;
      padding-top: 0rem;
    }

    p {
      margin-right: 1rem;
    }
    .right {
      margin-top: 1rem;
      margin-left: 1rem;
    }
    .card:first-of-type {
      margin-left: 1rem;
    }
  }
</style>
