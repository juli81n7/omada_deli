<style>
  nav {
    background-color: var(--primarycolor);
    color: var(--secondarycolor);
  }
  nav h3 {
    padding-block: 1rem;
    margin-left: 1rem;
  }
  .herogrid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    height: 35rem;
    overflow: hidden;
  }
  .heroimg {
  }
  .herotxt {
    grid-column: 1/4;
    grid-row: 1/4;
    place-self: center;
    color: var(--secondarycolor);
  }
  .herotxt h3 {
    text-align: center;
  }
  .line {
    border-top: solid 1.5px white;
    width: 100%;
    margin-top: 0.5rem;
    margin-inline: 0.5rem;
    width: 100%;
  }
  .imgcon {
    grid-column: 1/4;
    grid-row: 1/4;
  }
  .easter {
    display: flex;
  }
</style>
